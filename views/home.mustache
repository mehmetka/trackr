<!doctype html>
<html lang="en">
<head>
    {{> head }}
</head>
<body class="vertical dark">
<div class="wrapper">
    {{> navbar }}
    <main role="main" class="main-content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12">

                    <div class="card mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Add a date</h5>
                                <div class="form-group">
                                    <input type="text" id="name" placeholder="Type a name" class="form-control">
                                </div>

                                <div class="form-group">
                                    <input type="text" id="start" class="form-control">
                                </div>

                                <div class="form-group">
                                    <button id="btnAddNewDateTracking" class="btn btn-primary mb-2">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Today: {{today}}</h2>
                    {{#dateTrackings}}
                        <h2>{{name}} ({{start}}): {{detailedDiff}} ({{diff}})</h2>
                    {{/dateTrackings}}
                    <h2>Reading Average: {{readingAverage}} ({{readingTotal}}/{{dayDiff}})</h2>

                </div> <!-- .col-12 -->
            </div> <!-- .row -->
        </div> <!-- .container-fluid -->
    </main> <!-- main -->
</div> <!-- .wrapper -->

{{> include}}
{{> menu }}
{{> navbar }}

<script>
    $(document).ready(function () {

        $('#start').daterangepicker({
            singleDatePicker: true,
            timePicker: false,
            showDropdowns: true,
            locale: {format: 'MM/DD/YYYY'}
        });

        $("#btnAddNewDateTracking").on('click', function (e) {

            var name = $('#name').val();
            var start = $('#start').val();
            var result = ajaxCall('POST', "/datetrackings", "name=" + name + "&start=" + start)

            if (result !== false) {
                location.reload();
            }

        });

    });
</script>
</body>
</html>