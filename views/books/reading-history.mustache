<!doctype html>
<html lang="en">

<head>
    {{> head }}
</head>

<body class="vertical dark">
<div class="wrapper">
    <main role="main" class="main-content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12">

                    <!-- simple table -->
                    <div class="card mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Reading History</h5>
                                <table class="table table-striped table-bordered" id="booksDatatable" width="100%">
                                    <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Path</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#readingHistory}}
                                        <tr>
                                            <td>{{author}} - {{title}}
                                            <td>{{pathName}}</td>
                                            <td>{{amount}}</td>
                                            <td>{{record_date}}</td>
                                        </tr>
                                    {{/readingHistory}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- simple table -->
                </div> <!-- .col-12 -->
            </div> <!-- .row -->
        </div> <!-- .container-fluid -->
    </main> <!-- main -->
</div> <!-- .wrapper -->

{{> include}}
{{> menu }}
{{> navbar }}

<script>
    $(document).ready(function () {

    });
</script>
</body>

</html>