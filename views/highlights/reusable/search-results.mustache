<div id="search-results"></div>

{{=<% %>=}}
<script id="search-results-template" type="text/html">
    <!-- TODO identical with highlight-cards partial. -->
        {{#highlights}}
        <div class="card highlightCard">
            <div class="card-body">

                {{#version_count}}
                    <a role="button" href="#" data-id="{{id}}"
                       class="badge badge-warning float-right btnHighlightVersions"
                       data-toggle="modal" data-target="#highlightVersionsModal"><span
                            class="fe fe-activity fe-8"></span></a>
                {{/version_count}}

                {{#parent_highlight}}
                    <a role="button" href="/highlights/{{highlight_id}}/details"
                       class="badge badge-info float-right highlightToolTip" data-id="{{highlight_id}}">Parent</a>
                {{/parent_highlight}}

                <a role="button" href="/highlights/{{id}}/details" class="badge badge-primary float-right"><span
                        class="fe fe-edit fe-8"></span></a>
                <a role="button" class="badge float-right addToFavorite" data-id="{{id}}"><span
                        class="fe fe-heart fe-8"></span></a>

                {{#blog_path}}
                    <br>
                    <strong>{{blog_path}}</strong>
                    <br>
                {{/blog_path}}

                <br>
                {{{highlight}}}

                <footer class="blockquote-footer">
                    {{ultimate_source}} ~ {{created_at_formatted}}/{{updated_at_formatted}}
                    {{#is_secret}}
                        <i class="fe fe-lock fe-12"></i>
                    {{/is_secret}}
                    {{#tags}}
                        <br><br>
                        <strong>{{{imploded_link_blank}}}</strong>
                    {{/tags}}
                </footer>

            </div>
        </div>
        <br class="highlightCardBR">
        {{/highlights}}
</script>
<%={{ }}=%>