<!doctype html>
<html lang="en">
<head>
    {{> head }}
</head>
<body class="vertical  dark">
<div class="wrapper">
    {{> navbar }}
    {{> menu }}
    <main role="main" class="main-content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <strong class="card-title">Create New Path</strong>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="input-group input-group-lg">
                                    <div class="form-group col-md-6">
                                        <label for="multi-select2">Name</label>
                                        <input id="pathName" placeholder="Name" type="text"
                                               class="form-control enterButtonKeyPress"></div>

                                    <div class="form-group col-md-6">
                                        <label for="multi-select2">Finish</label>
                                        <input type="text" id="pathFinish" placeholder="Finish"
                                               class="form-control enterButtonKeyPress">
                                    </div>

                                    <div class="form-group col-md-12">
                                        <button id="btnAddNewPath" class="btn btn-primary mb-2">Add</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div> <!-- / .card -->

                    <div class="card-columns">
                        {{#bookPaths}}
                            <div class="card">
                                <div class="card-header bg-dark">
                                    {{path_name}} {{{day_diff_text}}}
                                    <span class="text-warning float-right">%{{ratio}}</span>
                                </div>
                                <div class="card-body">
                                    <div><span class="text-success">Start:</span> {{start}}</div>
                                    <div><span class="text-danger">Finish:</span> {{finish}}</div>
                                    <div><strong>Remaining Page</strong>: {{remaining_page}}</div>
                                    <br>
                                    <div><strong>{{{today_processed_text}}}</strong></div>
                                </div>
                                <div class="card-footer">
                                    {{#remaining_day_warning}}
                                        <button class="btn btn-sm btn-danger btnExtendFinishDate"
                                                data-uid="{{pathUID}}">Add 10 More Days
                                        </button>
                                    {{/remaining_day_warning}}
                                    <a class="btn btn-sm btn-dark" href="/books/paths/{{pathUID}}">Books</a>
                                </div>
                            </div>
                        {{/bookPaths}}
                    </div>

                </div> <!-- .col-12 -->
            </div> <!-- .row -->
        </div> <!-- .container-fluid -->
    </main> <!-- main -->
</div> <!-- .wrapper -->
{{> include}}
<script>
    $(document).ready(function () {

        $('#pathFinish').daterangepicker(
                {
                    singleDatePicker: true,
                    timePicker: false,
                    showDropdowns: true,
                    locale: {format: 'MM/DD/YYYY'}
                });

        $("#btnAddNewPath").on('click', function (e) {

            var pathName = $('#pathName').val();
            var finishDate = $('#pathFinish').val();

            $.ajax({
                type: "POST",
                data: "pathName=" + pathName + "&pathFinish=" + finishDate,
                url: "/books/paths",
                success: function () {
                    alert("success");
                    location.reload();
                },
                error: function () {
                    alert("error");
                }
            });

        });

        $(".btnExtendFinishDate").on('click', function (e) {

            var pathUID = $(this).data("uid");

            $.ajax({
                type: "POST",
                url: "/books/paths/" + pathUID + "/extend",
                success: function (data, status, xhr) {
                    alert(xhr.responseJSON.message);
                    location.reload();
                },
                error: function (data, status, xhr) {
                    alert(data.responseJSON.message);
                }
            });
        });

    });
</script>
</body>
</html>